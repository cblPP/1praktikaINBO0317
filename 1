#include <iostream>
#include <string>
using namespace std;
main()
{
	string s;
	cin >> s;
	cout << "Hello , " << s << " !";
	return 0;
}

//////////////////////////////////////////////
#include <iostream>
using namespace std;
main()
{
	int a,b;
	float c,d;
	cin >> a >> b;
	cout << "a+b: " << a+b << endl;
	cout << "a-b: " << a-b << endl;
	cin >> c >> d;
	cout << "c+d: " << c+d << endl;
	cout << "c-d: " << c-d << endl;	
	return 0;
}
